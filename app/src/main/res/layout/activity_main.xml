<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg2"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="381dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="6dp"
        android:text="Instant Heart Rate"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="#215081"
        android:textSize="24sp"
        android:textStyle="bold"/>

    <ImageView
        android:id="@+id/redheart"
        android:layout_width="12dp"
        android:layout_height="14dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="67dp"
        android:layout_marginTop="446dp"
        android:layout_marginEnd="89dp"
        android:src="@drawable/redheart" />

    <ImageView
        android:id="@+id/blueheart"
        android:layout_width="12dp"
        android:layout_height="14dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="171dp"
        android:layout_marginTop="446dp"
        android:layout_marginEnd="201dp"
        android:src="@drawable/blueheart" />

    <ImageView
        android:id="@+id/greenheart"
        android:layout_width="12dp"
        android:layout_height="14dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="271dp"
        android:layout_marginTop="446dp"
        android:layout_marginEnd="96dp"
        android:src="@drawable/greenheart" />


    <Button
        android:id="@+id/buttonAnxious"
        android:layout_width="141dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="200dp"
        android:layout_marginTop="46dp"
        android:layout_marginEnd="28dp"
        android:background="@drawable/buttonanxious"
        android:shadowColor="#A8A8A8"
        android:shadowRadius="5"
        android:text="Feeling Anxious"
        android:textColor="#FFFFFF"
        android:textSize="19sp" />

    <Button
        android:id="@+id/buttonPanicked"
        android:layout_width="141dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="28dp"
        android:layout_marginTop="46dp"
        android:background="@drawable/buttonpanicked"
        android:shadowColor="#A8A8A8"
        android:shadowRadius="5"
        android:text="Feeling Panicked"
        android:textColor="#FFFFFF"
        android:textSize="18sp" />

    <Button
        android:id="@+id/buttonInfo"
        android:layout_width="match_parent"
        android:layout_height="61dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="376dp"
        android:text="Information about Anxiety and Panic Attacks"
        android:textSize="14sp"
        android:textColor="#FFFFFF"
        android:background="@drawable/buttoninfo"
        android:shadowColor="#A8A8A8"
        android:shadowDx="-2"
        android:shadowDy="4"
        android:shadowRadius="7"
        android:textStyle= "bold"/>


    <Button
        android:id="@+id/buttonLow"
        android:layout_width="79dp"
        android:layout_height="72dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="34dp"
        android:layout_marginTop="439dp"
        android:background="@drawable/buttonlow"
        android:shadowColor="#A81505"
        android:shadowDx="-2"
        android:shadowDy="4"
        android:shadowRadius="7"
        android:text="Low"
        android:textColor="#0e0e0e"
        android:textColorHighlight="#A81505"
        android:textSize="15sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/buttonNormal"
        android:layout_width="79dp"
        android:layout_height="72dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="138dp"
        android:layout_marginTop="439dp"
        android:background="@drawable/buttonnormal"
        android:shadowColor="#349bdf"
        android:shadowDx="-2"
        android:shadowDy="4"
        android:shadowRadius="7"
        android:text="Normal"
        android:textColor="#0e0e0e"
        android:textSize="15sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/buttonHigh"
        android:layout_width="79dp"
        android:layout_height="72dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="240dp"
        android:layout_marginTop="440dp"
        android:background="@drawable/buttonhigh"
        android:shadowColor="#48c174"
        android:shadowDx="-2"
        android:shadowDy="4"
        android:shadowRadius="7"
        android:text="High"
        android:textColor="#0e0e0e"
        android:textSize="15sp"
        android:textStyle="bold" />



</RelativeLayout>